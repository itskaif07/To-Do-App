<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>To-Do List</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>
<body>

    @model ToDo_App.Models.TaskItem

    @{
        ViewData["Title"] = "Delete";
    }

    <h1 class="text-3xl font-medium mt-4 mb-2">Delete</h1>

    <h3 class="text-xl  mb-2">Are you sure you want to delete this?</h3>
    <div>

        <hr class="w-25">
        <dl class="row py-10">

            <dt class="col-sm-2 text-xl font-medium mb-4">
                @Html.DisplayNameFor(model => model.Title)
            </dt>

            <dd class="col-sm-10 text-lg mb-4">
                @Html.DisplayFor(model => model.Title)
            </dd>

            <dt class="col-sm-2 text-xl font-medium">
                Time
            </dt>

            <dd class="col-sm-10 text-lg mb-4">
                @if (Model.Time != null)
                {

                    <span>@($"{Model.Time.Value.Hours % 12:D2}:{Model.Time.Value.Minutes:D2} {(Model.Time.Value.Hours >= 12 ? "PM" : "AM")}")</span>
                }
                else
                {
                    <span>Not Set</span>
                }
            </dd>


            <dt class="col-sm-2 text-xl font-medium">
                Date
            </dt>

            <dd class="col-sm-10 text-lg mb-4">
                @if (Model.Date != null)
                {

                    <span>@($"{Model.Date.Value:dd/MM/yyyy}")</span>
                }
                else
                {
                    <span>Not Set</span>
                }
            </dd>


            <dt class="col-sm-2 text-xl font-medium">
                Task Status
            </dt>

            <dd class="col-sm-10 text-xl mb-4">
                @Html.DisplayFor(model => model.IsCompleted)
            </dd>

            <dt class="col-sm-2 text-xl font-medium">

                @Html.DisplayNameFor(model => model.Description)
            </dt>

            <dd class="col-sm-10 text-lg">

                @if (string.IsNullOrEmpty(Model.Description))
                {
                    <span>None</span>
                }
                else
                {
                    @Html.DisplayFor(Model => Model.Description)
                }
            </dd>

        </dl>

        <form asp-action="Delete" class="space-y-4">
            <input type="hidden" asp-for="SNo" />
            <input type="submit" value="Delete" class="btn btn-danger" />

            <a asp-action="Index" class="block">
                <div class="bg-black text-white rounded-md w-full inline text-center hover:text-yellow-300 px-3 py-2">
                    Back to List
                </div>
            </a>
        </form>
    </div>


</body>
</html>