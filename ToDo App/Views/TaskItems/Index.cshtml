<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>To-Do List</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>
<body>


    @model IEnumerable<ToDo_App.Models.TaskItem>

    @{
        ViewData["Title"] = "Index";
    }


    <h1 class="text-4xl my-6 text-center font-bold">To Do List</h1>

    <div class="text-white text-center bg-black rounded-xl w-32 py-2 mx-auto">
        <a asp-action="Create" class="hover:text-yellow-300">Add Task</a>
    </div>

    <table class="table w-full mt-4">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.SNo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Title)
                </th>
                <th>
                    Time
                </th>
                <th>
                    Date
                </th>
                <th>
                    Status
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @{
             int serialNumber = 1;
            }
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @serialNumber.
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td>
                        @if (item.Time != null)
                        {

                            <span>@($"{item.Time.Value.Hours % 12:D2}:{item.Time.Value.Minutes:D2} {(item.Time.Value.Hours >= 12 ? "PM" : "AM")}")</span>
                        }
                        else
                        {
                            <span>Not Set</span>
                        }
                    </td>
                    <td>
                        @if(item.Date != null)
                        {                       
                            <span>@($"{item.Date.Value:dd/MM/yyyy}")</span>
                        }
                        else
                        {
                            <span>Not Set</span>
                        }
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IsCompleted)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.SNo">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.SNo">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.SNo">Delete</a>
                    </td>
                </tr>
                serialNumber++;
            }
        </tbody>
    </table>

    
</body>
</html>

